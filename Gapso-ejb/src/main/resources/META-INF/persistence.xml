<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GapsoPU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/GapsoDS</jta-data-source>
    <class>com.gapso.persistence.entity.portal.Business</class>
    <class>com.gapso.persistence.entity.portal.PortalUser</class>
    <class>com.gapso.persistence.entity.portal.PortalUserRole</class>
    <class>com.gapso.persistence.entity.portal.Station</class>
    <class>com.gapso.persistence.entity.portal.StationManager</class>
    <class>com.gapso.persistence.entity.portal.PushRegister</class>
    <class>com.gapso.persistence.entity.portal.Setting</class>
    <class>com.gapso.persistence.entity.portal.PortalUserSessionLog</class>
    <class>com.gapso.persistence.entity.portal.PasswordChangeLog</class>
    <class>com.gapso.persistence.entity.portal.Message</class>
    <class>com.gapso.persistence.entity.portal.Calendar</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
